<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HostedIn"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.password.RecoverPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".feature.guest.bookings.AccommodationBookingActivity"
            android:exported="false" />
        <activity
            android:name=".feature.guest.bookings.AccommodationDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".feature.host.accommodations.AccommodationFormActivity"
            android:exported="false" />
        <activity
            android:name=".feature.user.DeleteAccountActivity"
            android:exported="false" />
        <activity
            android:name=".feature.user.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".feature.user.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".feature.host.HostMainActivity"
            android:exported="false"
            android:label="@string/title_activity_host_main"
            android:theme="@style/Theme.HostedIn" />
        <activity
            android:name=".feature.guest.GuestMainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>