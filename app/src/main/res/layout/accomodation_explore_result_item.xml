<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_accommodation"
            android:layout_width="match_parent"
            android:src="#7ED4D7DC"
            android:layout_height="300sp"/>

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campamento a 2k de coatepec para disfrutar"
            android:layout_toLeftOf="@id/txv_calification"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imv_accommodation"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txv_calification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="4.25"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imv_accommodation"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/sharp_auto_awesome_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="$5000 MXN por noche"
            android:layout_below="@id/txv_title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/night_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="por noche"
            android:layout_below="@id/txv_title"
            android:layout_toRightOf="@id/price"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
</layout>