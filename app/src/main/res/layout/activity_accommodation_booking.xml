<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="accommodation_data" type="com.sdi.hostedin.data.model.Accommodation"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.guest.bookings.accommodationbooking.AccommodationBookingActivity">

        <TextView
            android:id="@+id/txv_accommodation_booking_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="¡Preparemos tu\nreservación!"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txv_accommodation_booking_message"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/btn_save_booking"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lnly_accommodation_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    >
                    <ImageView
                        android:id="@+id/imv_accommodation_photo"
                        android:layout_width="168dp"
                        android:layout_height="150dp"
                        android:maxHeight="150dp"
                        android:maxWidth="200dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_house"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:id="@+id/txv_accommodation_booking_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@{accommodation_data.title}"
                            android:textColor="#113E96"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:maxLines="2"/>

                        <TextView
                            android:id="@+id/txv_accommodation_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Casa"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:maxLines="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{accommodation_data.location.address}"
                            android:maxLines="2"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/txv_night_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ MXN por noche"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:maxLines="2"/>

                        <include
                            android:id="@+id/incl_host_data"
                            layout="@layout/item_host_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnly_reservation_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu reservación"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fecha de inicio"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="20dp"
                                android:maxLines="1"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_beginning_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Button.IconButton.Outlined"
                                android:text=""
                                android:hint="      dd/mm/yyyy      "
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="14dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fecha de fin"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="20dp"
                                android:maxLines="1"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_ending_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Button.IconButton.Outlined"
                                android:text=""
                                android:hint="      dd/mm/yyyy      "
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="15dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Huéspedes"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="20dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Huéspedes"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_decrement_guests"
                                style="?attr/materialIconButtonFilledStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="18dp"
                                android:paddingEnd="18dp"
                                android:text="-"
                                android:contentDescription="decrement guests number"/>

                            <EditText
                                android:id="@+id/etx_guests_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="1"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>

                            <Button
                                android:id="@+id/btn_increment_guests"
                                style="?attr/materialIconButtonFilledStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:layout_marginEnd="20dp"
                                android:text="+"
                                android:contentDescription="increment guests number"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txv_guests_number_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solo permite hasta\n huespedes"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnly_price_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detalles del precio"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*El pago es presencial con el anfitrión"
                            android:textSize="11sp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="textEnd"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txv_price_per_night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ MXN x noches"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/txv_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ MXN"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impuestos"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/txv_iva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ MXN"
                            android:layout_marginEnd="15dp"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textStyle="bold"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/txv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ MXN"
                            android:textStyle="bold"
                            android:layout_marginEnd="15dp"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnly_cancellation_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Políticas de cancelación"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/txv_cancellation_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La cancelación de la reservación puede hacerse hasta máximo un día
antes de la fecha de inicio."
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_save_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Confirmar reservación" />

        <ProgressBar
            android:id="@+id/pgb_create_booking"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>
</layout>