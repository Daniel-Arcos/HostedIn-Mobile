<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.host.accommodations.accommodationform.AccommodationMultimediaFragment">

        <TextView
            android:id="@+id/multimedia_instruction_tvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="Muéstrales a tus huéspedes el\nalojamiento"
            android:textColor="#5280DB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/multimedia_instruction_tvw"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >

                    <RelativeLayout
                        android:id="@+id/rtly_main_image"
                        android:layout_height="170dp"
                        android:layout_width="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="0"
                        android:layout_column="0"
                        android:layout_columnWeight="3"
                        android:layout_margin="5dp"
                        android:background="@drawable/add_image_shape">

                        <ImageView
                            android:id="@+id/imv_main_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:padding="50dp"
                            android:src="@drawable/add_icon" />
                    </RelativeLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="10dp"
                        android:columnCount="3"
                        android:layout_marginEnd="10dp">

                        <RelativeLayout
                            android:id="@+id/rtly_second_image"
                            android:layout_height="90dp"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/add_image_shape">

                            <ImageView
                                android:id="@+id/imv_second_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:padding="25dp"
                                android:src="@drawable/add_icon" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rtly_third_image"
                            android:layout_height="90dp"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/add_image_shape">

                            <ImageView
                                android:id="@+id/imv_third_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:padding="25dp"
                                android:src="@drawable/add_icon" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rtly_fourth_video"
                            android:layout_height="90dp"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/add_image_shape">

                            <VideoView
                                android:id="@+id/vdv_fourth_video"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                />

                            <ImageView
                                android:id="@+id/imv_fourth_video"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:padding="25dp"
                                android:src="@drawable/add_icon" />


                        </RelativeLayout>

                    </GridLayout>

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gridLayout"
                    android:orientation="vertical"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>