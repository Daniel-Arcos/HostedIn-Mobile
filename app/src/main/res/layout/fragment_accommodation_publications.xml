<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.host.bookings.AccommodationPublicationsFragment">

        <TextView
            android:id="@+id/txvGretting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:background="@color/general_background"
            android:text="Â¡Hola!, estos son tus planes para tus proximas vaciones"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            />

        <LinearLayout
            android:id="@+id/lrlyButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvGretting"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:elevation="15dp">

            <Button
                android:id="@+id/bttActives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actives" />

            <Button
                android:id="@+id/bttUnactives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inactives" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPublicationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lrlyButtons"
            android:layout_above="@+id/txv_questionHint"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />


        <TextView
            android:id="@+id/txv_questionHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bttNewAccommodation"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="Do you wanna post a new accommodation?" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bttNewAccommodation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Post new accommodation" />


    </RelativeLayout>

</layout>