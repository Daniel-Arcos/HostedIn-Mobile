<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.host.accommodations.AccommodationTypeFragment">

        <TextView
            android:id="@+id/type_instruction_tvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="¿Que tipo de alojamiento describe\nmejor tu publicación?"
            android:textColor="#5280DB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_instruction_tvw"
            android:layout_marginTop="12dp">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:rowCount="3"
                android:columnCount="2">

                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/house_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:text="Casa"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="35dp"
                    />

                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/apartment_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:text="Departamento"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:elevation="10dp"
                    />

                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/cabin_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:text="Cabaña"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="35dp"
                    />

                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/campament_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:text="Campamento"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />



                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/camper_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:elevation="10dp"
                    android:text="Casa rodante"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />

                <android.widget.Button
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:drawableTop="@drawable/ship_icon"
                    android:background="@drawable/rectangle_rounded_shape"
                    android:text="Barco"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:elevation="5dp"
                    android:paddingHorizontal="35dp"
                    />
            </GridLayout>

        </ScrollView>

    </RelativeLayout>

</layout>