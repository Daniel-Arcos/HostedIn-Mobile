<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.guest.explore.ExploreFragment">

        <TextView
            android:id="@+id/txvGretting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:background="@color/general_background"
            android:text="Â¡Hola!, estos son tus planes para tus proximas vaciones"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            />

        <LinearLayout
            android:id="@+id/lrlyButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvGretting"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:elevation="15dp">

            <Button
                android:id="@+id/bttCurrents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Currents" />

            <Button
                android:id="@+id/bttOlds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Olds" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPublicationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lrlyButtons"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />



    </RelativeLayout>
</layout>