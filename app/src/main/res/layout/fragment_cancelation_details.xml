<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        tools:context=".feature.cancelation.cancelationdetails.CancelationDetailsFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_alignBottom="@id/btn_view_map"/>

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservacion cancelada"
            android:textSize="22dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_accommodation"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_below="@id/txv_title"
            android:layout_marginStart="15dp"
            android:layout_alignBottom="@id/txv_user_phone"/>

        <TextView
            android:id="@+id/txv_title_accommodation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo alojamiento"
            android:layout_below="@id/txv_title"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/img_accommodation"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txv_type_accommodation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo alojamiento"
            android:layout_below="@id/txv_title_accommodation"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txv_place_accommodation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar alojamiento"
            android:layout_below="@id/txv_type_accommodation"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txv_accommodation_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:layout_below="@id/txv_place_accommodation"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_accommodation_price"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_alignStart="@id/txv_persona"
            android:layout_alignBottom="@id/txv_user_phone"
            android:layout_marginEnd="15dp"
            android:background="#A8A8A8"/>

        <TextView
            android:id="@+id/txv_persona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre anf/hot"
            android:layout_below="@id/txv_accommodation_price"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/txv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre apellido apellido"
            android:layout_below="@id/txv_persona"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:layout_below="@id/txv_user_name"
            android:layout_toEndOf="@id/img_accommodation"
            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/go_back_icon"
            android:layout_alignTop="@id/btn_view_map"
            android:layout_alignBottom="@id/btn_view_map"
            android:layout_alignEnd="@id/btn_view_map"
            android:rotation="180"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_accommodation"
            android:text="Ver mapa"
            style="@style/Widget.Material3.Button.TextButton"
            app:icon="@drawable/location_pin_icon"
            app:iconSize="30dp"
            android:textAlignment="textStart"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_alignTop="@id/txv_details_cancelation"/>

        <TextView
            android:id="@+id/txv_details_cancelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de la cancelacion"
            android:layout_below="@id/btn_view_map"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:layout_below="@id/txv_details_cancelation"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de cancelacion"
            android:layout_below="@id/txv_details_cancelation"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_below="@id/txv_date"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:layout_below="@id/txv_date"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/txv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de cancelacion"
            android:layout_below="@id/txv_date"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />


        <View
            android:layout_below="@id/txv_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo"
            android:layout_below="@id/txv_time"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/txv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de cancelacion"
            android:layout_below="@id/txv_time"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />


        <View
            android:layout_below="@id/txv_reason"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver a reservar"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
</layout>