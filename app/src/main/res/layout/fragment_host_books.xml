<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.host.bookings.HostBookingsFragment">

    <TextView
        android:id="@+id/txv_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@color/general_background"
        android:text="Hola, En Hosted-In te ayudamos a gestionar las reservaciones de tus publicaciones"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyv_booked_publications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_fragment_header"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</layout>