<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".feature.password.RecoverPasswordCodeEntryFragment"
        >

        <TextView
            android:id="@+id/txv_code_entry_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="Ingresa el código de verificación que fue enviado a tu correo"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <View
            android:id="@+id/vw_horizontal_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:background="@color/black"
            android:layout_below="@+id/txv_code_entry_header"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/lnly_code_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_below="@id/vw_horizontal_line"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <EditText
                android:id="@+id/etx_first_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textbox"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp"
                android:inputType="number"/>

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="7dp"
                android:background="@color/black"/>

            <EditText
                android:id="@+id/etx_second_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textbox"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp"
                android:inputType="number"/>

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="7dp"
                android:background="@color/black"/>

            <EditText
                android:id="@+id/etx_third_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textbox"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp"
                android:inputType="number"/>

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="7dp"
                android:background="@color/black"/>

            <EditText
                android:id="@+id/etx_forth_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textbox"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp"
                android:inputType="number"/>

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="7dp"
                android:background="@color/black"/>

            <EditText
                android:id="@+id/etx_fifth_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textbox"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp"
                android:inputType="number"/>
        </LinearLayout>


    </RelativeLayout>
</layout>