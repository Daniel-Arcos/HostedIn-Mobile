<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_location_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/location_pin_icon"
            android:layout_margin="10dp"
            android:background="@drawable/circle_shape_gray"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/txv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="xalapa"
            android:textSize="18sp"
            android:layout_toEndOf="@id/imv_location_icon"/>

        <TextView
            android:id="@+id/txv_place_address"
            android:layout_below="@id/txv_place_name"
            android:layout_toEndOf="@id/imv_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veracruz"/>

    </RelativeLayout>
</layout>