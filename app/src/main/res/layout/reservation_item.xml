<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txv_GuestTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest : "
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/txv_GuestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tristan Eduardo Suarez Santiago "
            android:textSize="16dp"
            android:layout_toEndOf="@+id/txv_GuestTag"
            android:layout_alignBaseline="@+id/txv_GuestTag"/>

        <TextView
            android:id="@+id/txv_StayTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay : "
            android:textSize="20dp"
            android:layout_below="@+id/txv_GuestTag"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/txv_StayDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/12/2024 - 22/01/2024"
            android:textSize="16dp"
            android:layout_toEndOf="@+id/txv_StayTag"
            android:layout_alignBaseline="@+id/txv_StayTag"
            android:layout_toStartOf="@+id/bttCancel"/>

        <Button
            android:id="@+id/bttCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txv_StayTag"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingVertical="1dp"
            android:text="Cancelar"
            android:textSize="12dp" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            android:layout_below="@+id/bttCancel"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</layout>